<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/mychef_logo"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"/>

        <!-- Hoşgeldiniz başlığı -->
        <TextView
            android:id="@+id/textSignUpTitle"
            android:text="MyChef`e Hoşgeldiniz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Açıklama -->
        <TextView
            android:id="@+id/textSignUpDesc"
            android:text="MyChef, yemek tariflerinden malzeme listelerine, mutfak ipuçlarından kişiselleştirilmiş menü önerilerine kadar her aşamada size yardımcı olan akıllı bir uygulamadır. Mutfakta geçirdiğiniz zamanı keyifli ve verimli hale getirerek, yemek yapmayı bir sanata dönüştürür!"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- İsim -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adı Soyadı"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <!-- Şifre -->
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <!-- Numara -->
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numara"
            android:inputType="phone"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <!-- Şef belgesi -->
        <LinearLayout
            android:id="@+id/layoutChefDoc"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Şef Belgesi Yükle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/buttonUploadDoc"
                android:text="Belge Seç"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Kayıt ol butonu -->
        <Button
            android:id="@+id/buttonSignUp"
            android:text="KAYIT OL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#B8860B"
            android:textColor="@android:color/white"/>

        <!-- Giriş yap linki -->
        <TextView
            android:id="@+id/textGoLogin"
            android:text="Zaten Bir Hesabınız Var mı? GİRİŞ YAP"
            android:textColor="#B8860B"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
